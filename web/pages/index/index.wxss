/**index.wxss**/
.container {
  background-image: url('https://minitest-1309252537.cos.ap-beijing.myqcloud.com/back04.jpg');
  background-repeat: no-repeat;
  background-size: cover;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30px;
  font-weight: bold;
  color: rgb(223, 148, 78);
}

.userNickName {
  margin-top: 30px;
}

.userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid rgb(175, 241, 112);
  box-shadow: 0 0 50px 10px #539bd6;
  animation: size 3s infinite;
}

.usermotto {
  margin-top: 240px;
  font-size: 20px;
  color: rgb(180, 185, 233);
  font-weight: bolder;
  animation: fontsize 3s infinite;
}

@keyframes fontsize {
  0% {
    color: rgb(196, 212, 49);
  }

  50% {
    color: rgb(23, 183, 247)
  }

  100% {
    color: rgb(149, 216, 61);
  }
}

@keyframes size {
  0% {
    transform: scale(0);
    opacity: 0;
    box-shadow: 0 0 10px 10px #539bd6;
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 50px 10px #539bd6;
  }
  100% {
    transform: scale(1);
    opacity: 0;
    box-shadow: 0 0 50px 100px #539bd6;
  }
}